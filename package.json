{
  "name": "mail-valet",
  "version": "0.1.0",
  "description": "A cleaning app that samples Gmail messages and moves them to the trash by sender",
  "main": "dist/main/index.js",
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.0.0",
    "npm": "please-use-yarn",
    "pnpm": "please-use-yarn"
  },
  "scripts": {
    "dev": "concurrently -k -r \"yarn run dev:main\" \"yarn run dev:renderer\" \"yarn run dev:electron\"",
    "dev:main": "tsc -w -p tsconfig.main.json",
    "dev:renderer": "vite",
    "dev:electron": "wait-on dist/main/index.js http://localhost:3001 && electron . --dev",
    "build": "tsc -p tsconfig.main.json && vite build",
    "start": "electron .",
    "format": "prettier --write \"src/**/*.{ts,js,css,json}\"",
    "lint": "tsc --noEmit",
    "dist:win": "yarn build && electron-builder --win --publish=never",
    "dist:mac": "yarn build && electron-builder --mac --publish=never",
    "dist:linux": "yarn build && electron-builder --linux --publish=never",
    "release:win": "yarn build && electron-builder --win --publish=always",
    "release:mac": "yarn build && electron-builder --mac --publish=always",
    "release:linux": "yarn build && electron-builder --linux --publish=always",
    "clean": "rimraf dist release node_modules/.cache"
  },
  "keywords": [
    "mail-valet"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/imapflow": "^1.0.189",
    "@types/node": "^22.18.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.1",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.20",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "i18next": "^25.5.2",
    "imapflow": "^1.2.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.7.3",
    "react-router-dom": "^7.9.6",
    "xml2js": "^0.6.2",
    "zustand": "^5.0.8"
  }
}
